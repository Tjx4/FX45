<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="108dp"
    android:layout_height="40dp"
    android:layout_marginBottom="@dimen/xsmall_margin"
    android:layout_marginRight="@dimen/xsmall_margin"
    style="@style/PairItemBackground">

    <TextView
        android:id="@+id/tvPair"
        android:layout_width="0dp"
        android:layout_height="40dp"
        tools:text="USDZAR"
        android:gravity="left|center"
        android:layout_marginVertical="@dimen/small_margin"
        android:layout_marginLeft="@dimen/xsmall_margin"
        android:textColor="@color/lightText"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnAddCurrencyPair"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnAddCurrencyPair"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:paddingHorizontal="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@+id/tvPair"
        app:layout_constraintBottom_toBottomOf="@+id/tvPair"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>