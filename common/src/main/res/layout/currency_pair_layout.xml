<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/xsmall_margin">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/PairItem2Background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="@dimen/small_margin"
        android:paddingHorizontal="@dimen/medium_margin">

        <TextView
            style="@style/LargeTextView"
            android:id="@+id/tvFavCp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="USDZAR"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            style="@style/MediumTextView"
            android:id="@+id/tvFavCpFn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="USDZAR"
            android:textColor="@color/light_text_2"
            app:layout_constraintTop_toBottomOf="@+id/tvFavCp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btnConvert"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_check_pair"
            android:scaleType="fitCenter"
            app:tint="@color/red_2"
            android:paddingVertical="5dp"
            android:layout_marginRight="@dimen/small_margin"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/vSelIndicator"/>

        <View
            android:id="@+id/vSelIndicator"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/fx_disabled_button_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>